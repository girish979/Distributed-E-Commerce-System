{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Required for using CommonJS with TypeScript
    "moduleResolution": "node" // Makes sure the modules are properly resolved
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}